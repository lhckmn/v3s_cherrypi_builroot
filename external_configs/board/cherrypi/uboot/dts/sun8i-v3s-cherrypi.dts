/dts-v1/;
#include "sun8i-v3s.dtsi"
#include "sunxi-common-regulators.dtsi"

/ {
	model = "CherryPi";
	compatible = "cherrypi", "allwinner,sun8i-v3s";

	aliases {
		serial0 = &uart0;
	};

	chosen {
		stdout-path = "serial0:115200n8";
	};

	backlight: backlight {
		compatible = "gpio-backlight";
		gpios = <&pio 1 2 GPIO_ACTIVE_HIGH>;
		pinctrl-names = "default";
		pinctrl-0 = <&backlight_pin>;
		default-on;
	};

	panel: panel {
		compatible = "simple-panel";
		backlight = <&backlight>;

		port {
			panel_input: endpoint {
				remote-endpoint = <&tcon0_out_lcd>;
			};
		};

		display-timings {
			timing0: timing0 {
				clock-frequency = <10000000>;
				hactive = <480>;
				vactive = <272>;

				hfront-porch = <8>;
				hsync-len = <4>;
				hback-porch = <43>;

				vback-porch = <12>;
				vsync-len = <4>;
				vfront-porch = <8>;
			};
		};
	};
};

&pio {
	lcd_pins: lcd-pins {
		pins = "PE0", "PE1", "PE2", "PE3", /*CLK, DE, HSYNC, VSYNC*/
			"PE4", "PE5", "PE6", "PE7", "PE8", "PE9", /*B2 - B7*/
			"PE10", "PE11", "PE12", "PE13", "PE14", "PE15", /*G2 - G7*/
			"PE16", "PE17", "PE18", "PE19", "PE23", "PE24"; /*R2 - R7*/
		function = "lcd";
	};

	backlight_pin: backlight_pin {
		pins = "PB2";
		function = "gpio_out";
	};
};

&tcon0 {
	pinctrl-names = "default";
	pinctrl-0 = <&lcd_pins>;
	status = "okay";
};

&tcon0_out {
	tcon0_out_lcd: endpoint@0 {
		reg = <0>;
		remote-endpoint = <&panel_input>;
	};
};

&mmc0 {
	broken-cd;
	bus-width = <4>;
	vmmc-supply = <&reg_vcc3v3>;
	status = "okay";
};

&uart0 {
	pinctrl-0 = <&uart0_pb_pins>;
	pinctrl-names = "default";
	status = "okay";
};

&usb_otg {
	dr_mode = "otg";
	status = "okay";
};

&usbphy {
	usb0_id_det-gpios = <&pio 1 3 GPIO_ACTIVE_HIGH>;
	status = "okay";
};
